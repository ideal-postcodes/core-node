{
  "name": "@ideal-postcodes/core-node",
  "version": "3.0.1",
  "description": "Node.js client for api.ideal-postcodes.co.uk",
  "author": {
    "name": "Ideal Postcodes",
    "email": "support@ideal-postcodes.co.uk",
    "url": "https://ideal-postcodes.co.uk"
  },
  "bugs": {
    "url": "https://github.com/ideal-postcodes/core-node/issues",
    "email": "support@ideal-postcodes.co.uk"
  },
  "homepage": "https://github.com/ideal-postcodes/core-node",
  "repository": {
    "type": "git",
    "url": "https://github.com/ideal-postcodes/core-node.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "semantic-release": "semantic-release --no-ci",
    "test:watch": "NODE_ENV=test mocha --watch",
    "test:nock:reload": "NODE_ENV=test RECORD=true mocha",
    "test": "NODE_ENV=test mocha",
    "lint": "eslint lib/**/*.ts",
    "build": "tsc",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "typedoc --mode file --out docs/ --name 'Ideal Postcodes Node.js Client' --theme minimal --excludePrivate --hideGenerator lib/",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "prettier": {
    "editorconfig": true,
    "trailingComma": "es5"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts",
      "generate/**/*.ts"
    ],
    "exclude": [
      "dist/*",
      "**/*.d.ts",
      "generate/index.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "node-option": [
      "experimental-specifier-resolution=node",
      "loader=ts-node/esm"
    ],
    "spec": "test/*.ts",
    "exit": true,
    "fullTrace": true,
    "require": [
      "source-map-support/register"
    ]
  },
  "engines": {
    "node": ">=14.0"
  },
  "keywords": [
    "API",
    "Node.js",
    "UK",
    "Address",
    "Postcode",
    "Search",
    "Ideal Postcodes"
  ],
  "release": {
    "extends": "@cablanchard/semantic-release/dist/npm"
  },
  "license": "MIT",
  "dependencies": {
    "@ideal-postcodes/core-interface": "~2.0.2",
    "got": "~12.0.1"
  },
  "devDependencies": {
    "@babel/register": "~7.16.9",
    "@cablanchard/eslint-config": "~2.0.2",
    "@cablanchard/semantic-release": "~1.3.0",
    "@cablanchard/tsconfig": "2.0.0",
    "@ideal-postcodes/api-fixtures": "~1.3.0",
    "@ideal-postcodes/api-typings": "~2.1.0",
    "@types/chai": "~4.3.0",
    "@types/got": "~9.6.11",
    "@types/mocha": "~9.0.0",
    "@types/nock": "~11.1.0",
    "@types/node": "~16.10.9",
    "@types/prettier": "~2.3.2",
    "@types/sinon": "~10.0.6",
    "@typescript-eslint/eslint-plugin": "~5.9.1",
    "chai": "~4.3.0",
    "codecov": "~3.8.0",
    "eslint": "~7.32.0",
    "mocha": "~9.1.3",
    "nock": "13.2.1",
    "nyc": "~15.1.0",
    "prettier": "~2.5.1",
    "semantic-release": "~17.4.1",
    "sinon": "~12.0.1",
    "source-map-support": "~0.5.21",
    "ts-node": "~10.4.0",
    "typedoc": "~0.19.0",
    "typescript": "~4.0.8"
  }
}
